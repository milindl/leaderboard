<h1 class="standings_heading">STANDINGS</h1>
<table>
  <tr>
    <th>Rank</th>
    <th>Name</th>
    <th>Score</th>
    <th>Monthly</th>
    <th>Title</th>
  </tr>
 <% @user_score_pairs.each do |usp| %>
  <tr>
    <%= content_tag :td, usp[:index] %>
    <%= content_tag :td do %>
    <%= link_to usp[:user][:name], show_path(usp[:user]) %>
    <% end %>
    <%= content_tag :td, usp[:score] %>
    <%= content_tag :td, usp[:month_index] %>
    <%= content_tag :td, "TBA" %>
  </tr>
  <% end %>
</table>
<%= will_paginate @user_score_pairs %>
